{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@commands/*": ["src/commands/*"],
      "@lib/*": ["src/lib/*"],
      "*": ["*", "node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
